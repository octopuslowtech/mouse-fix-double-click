{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Mouse Fix Double Click",
  "version": "3.0.0",
  "identifier": "com.octopuslowtech.mousefix",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build"
  },
  "app": {
    "windows": [
      {
        "title": "Mouse Fix Double Click",
        "width": 650,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "backgroundColor": "#0f172a"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
